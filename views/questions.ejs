<%- include('partials/header') %>

<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <div class="card" id="question-form">
            <div class="card-header">
                <h3>Make a question</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/save-questions">
                    <label>Title </label>
                    <input type="text" placeholder="Title" class="form-control" name="title">
                    <br>
                    <label>Description</label>
                    <textarea placeholder="Describe your question" class="form-control" name="description"></textarea>
                    <br>
                    <button class="btn btn-primary">Question</button>
                </form>
            </div>
        </div>
    </div>
</body>

